{
    "name": "java-ts-definition-generator",
    "version": "1.2.0",
    "description": "The typescript definition generator for the java-bridge package",
    "main": "dist/index.prod.min.js",
    "types": "dist/src/index.d.ts",
    "scripts": {
        "test": "mocha -r ts-node/register test/*.test.ts --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
        "build": "webpack build",
        "format": "prettier --write .",
        "prebuild": "npm run build:java",
        "build:java": "run-script-os",
        "build:java:darwin:linux": "cd java-src && chmod +x gradlew && ./gradlew shadowJar",
        "build:java:win32": "cd java-src && .\\gradlew.bat shadowJar",
        "docs": "typedoc --out docs src/index.ts"
    },
    "keywords": [],
    "author": "MarkusJx",
    "license": "MIT",
    "files": [
        "dist/**/*"
    ],
    "bin": {
        "java-ts-gen": "./dist/java-ts-gen.js"
    },
    "dependencies": {
        "chalk": "^5.2.0",
        "minimatch": "^10.0.1",
        "ora": "^8.1.1",
        "semver": "^7.5.4",
        "typescript": "^5.7.3",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/chai": "^5.0.1",
        "@types/is-ci": "^3.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^22.13.0",
        "@types/semver": "^7.5.0",
        "@types/webpack-node-externals": "^3.0.0",
        "@types/yargs": "^17.0.24",
        "chai": "^5.1.2",
        "copy-webpack-plugin": "^12.0.2",
        "is-ci": "^4.1.0",
        "java-bridge": "^2.7.0",
        "mocha": "^11.1.0",
        "mocha-junit-reporter": "^2.2.0",
        "mocha-multi-reporters": "^1.5.1",
        "prettier": "^3.0.2",
        "run-script-os": "^1.1.6",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "typedoc": "^0.27.6",
        "webpack": "^5.88.0",
        "webpack-cli": "^6.0.1",
        "webpack-node-externals": "^3.0.0"
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    }
}
